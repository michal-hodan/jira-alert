<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="@string/tile_summary"
            android:layout_width="268dp"
            android:layout_height="wrap_content" android:id="@+id/summary"
            android:layout_marginStart="12dp" app:layout_constraintStart_toEndOf="@+id/priority_image"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/issue_key"
            android:maxLines="1"/>

    <TextView
            android:text="@string/tile_issue_key"
            android:layout_width="268dp"
            android:layout_height="28dp" android:id="@+id/issue_key"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/task_image"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:textSize="24sp"
            android:maxLines="1"/>

    <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp" app:srcCompat="@drawable/ic_launcher_background"
            android:id="@+id/task_image"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="6dp"
            android:contentDescription="@string/tile_task_description"/>

    <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp" app:srcCompat="@drawable/ic_menu_send"
            android:id="@+id/priority_image"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/task_image"
            android:contentDescription="@string/tile_priority_description"/>

    <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/assignee_image"
            app:layout_constraintStart_toEndOf="@+id/issue_key"
            android:layout_marginStart="12dp" android:layout_marginTop="6dp" app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/tile_assignee_description"/>

    <TextView
            android:text="@string/tile_story_points"
            android:background="@color/tile_story_points"
            android:layout_width="20dp"
            android:layout_height="19dp"
            android:id="@+id/story_points"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/summary"
            android:layout_marginStart="18dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/assignee_image"
            android:maxLines="1"/>

</android.support.constraint.ConstraintLayout>