<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".WelcomeIntroductionFragment">


    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:layout_width="221dp"
                android:layout_height="32dp"
                android:text="@string/welcome_introduction_label"
                android:ems="10"
                android:id="@+id/title" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.503" android:layout_marginTop="44dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="@string/welcome_introduction_text"
                android:layout_width="281dp"
                android:layout_height="125dp" android:id="@+id/textView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="156dp" app:layout_constraintTop_toBottomOf="@+id/title"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp" app:layout_constraintHorizontal_bias="0.512"/>
        <ImageView
                android:src="@drawable/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView" android:layout_marginBottom="83dp"
                app:layout_constraintBottom_toTopOf="@+id/textView3" android:layout_marginTop="100dp"
                app:layout_constraintTop_toBottomOf="@+id/title" app:layout_constraintVertical_bias="0.673"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="128dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="128dp"
                android:contentDescription="@string/welcome_introduction_logo_description"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>